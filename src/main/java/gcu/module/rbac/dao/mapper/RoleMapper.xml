<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="gcu.module.rbac.dao.mapper.RoleMapper">

    <resultMap id="roleMap" type="gcu.module.rbac.daomain.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sn" property="sn"/>
    </resultMap>
    <resultMap id="user_roleMap" type="gcu.module.rbac.daomain.UserRole">
        <id column="id" property="id"/>
        <result column="userId" property="userId"/>
        <result column="roleId" property="roleId"/>
    </resultMap>
    <sql id="columnSql_ro">
        ro.id,
        ro.name,
        ro.sn
    </sql>
    <sql id="columnSql_ur">
      ur.id,
      ur.userId,
      ur.roleId
    </sql>

    <insert id="addUserRole">
      INSERT INTO t_user_role (userId,roleId)
      VALUES (#{uid},#{roleId})
    </insert>
    <insert id="addRole">
      INSERT INTO t_role (name,sn)
      VALUES (#{role.name,jdbcType=VARCHAR},#{role.sn,jdbcType=VARCHAR})
    </insert>
    <update id="updateRole">
        UPDATE t_role ro
        <set>
            ro.name = #{role.name,jdbcType=VARCHAR}
        </set>
        where ro.id = #{role.id,jdbcType=INTEGER}
    </update>
    <delete id="deleteUserRole">
      DELETE FROM t_user_role
      WHERE userId = #{uid} and roleId =#{roleId}
    </delete>
    <delete id="deleteUserRoleByUser">
       DELETE FROM t_user_role
       WHERE userId = #{uid}
    </delete>
    <delete id="deleteRole">
        DELETE FROM t_role
        WHERE id = #{id}
    </delete>
    <delete id="deletetUserRoleByRole">
        DELETE FROM t_user_role
        WHERE roleId =#{roleId}
    </delete>
    <select id="getRoleList" resultType="gcu.module.rbac.daomain.Role">
        SELECT <include refid="columnSql_ro"/>
        FROM t_role ro
    </select>
    <select id="queryRoleByUser" resultType="gcu.module.rbac.daomain.Role">
        SELECT <include refid="columnSql_ro"/>
        FROM t_role ro,t_user us,t_user_role ur
        WHERE us.id = ur.userId AND ro.id = ur.roleId AND us.id = #{uid}
    </select>
    <select id="loadUserRole" resultType="gcu.module.rbac.daomain.UserRole">
        SELECT <include refid="columnSql_ur"/>
        FROM t_user_role ur
        WHERE ur.userId =#{uid} and ur.roleId =#{roleId}
    </select>
    <select id="queryRoleById" resultType="gcu.module.rbac.daomain.Role">
        SELECT <include refid="columnSql_ro"/>
        FROM t_role ro
        WHERE ro.id = #{id}
    </select>
</mapper>